<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ImageLoaderApp.MainWindow"
        Title="Image Loader"
        Width="600" Height="400">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
    <Button Content="Load Image" Click="OnLoadImageClick"/>
    <Image Name="ImageControl" Width="400" Height="300"/>
    <TextBlock Name="FileNameTextBlock" HorizontalAlignment="Center" />
  </StackPanel>
</Window>