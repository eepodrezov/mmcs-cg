<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GraphApp"
        x:Class="lab1.MainWindow"
        Width="800" Height="600"
        Title="Graph Plotter">
    <Grid>
        <Canvas Name="graphCanvas" Width="800" Height="600" />
        <ComboBox Name="functionComboBox"
          HorizontalAlignment="Left" VerticalAlignment="Top"
          SelectionChanged="OnFunctionSelected">
        <ComboBoxItem Content="sin(x)" />
        <ComboBoxItem Content="x^2" />
    </ComboBox>
    <Button Name="consoleButton"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Content="Вывести в консоль" Click="OnConsoleButtonClick" />
    </Grid>
</Window>
